{
  "name": "Devcontainer",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
  "features": {
    "ghcr.io/guiyomh/features/just:0.1.0": {},
    "ghcr.io/devcontainers/features/aws-cli:1": {}
  },
  "initializeCommand": "mkdir -p ${localEnv:HOME}/.aws",
  "mounts": [
    "source=${localEnv:HOME}/.aws,target=/home/vscode/.aws,type=bind,consistency=cached"
  ],
  "remoteEnv": {
    "AWS_REGION": "us-west-2"
  },
  "postCreateCommand": {
    "001-install-uv": "curl -LsSf https://astral.sh/uv/install.sh | sh",
    "002-install-deps": "uv sync",
    "003-install-pkg": "uv pip install -e .",
    "004-install-lint-deps": "uv pip install -e \".[lint]\"",
    "005-add-venv-to-path": "echo 'export PATH=\"/workspaces/buildstock-fetch/.venv/bin:$PATH\"' >> ~/.bashrc",
    "006-setup-pre-commit-hooks": "git config --global --add safe.directory /workspaces/buildstock-fetch",
    "007-pre-commit": "uv run pre-commit install --install-hooks"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "nefrob.vscode-just-syntax",
        "tamasfe.even-better-toml"
      ],
      "settings": {
        "python.testing.pytestArgs": ["tests"],
        "python.testing.unittestEnabled": false,
        "python.testing.pytestEnabled": true,
        "python.defaultInterpreterPath": "/workspaces/buildstock-fetch/.venv/bin/python",
        "python.testing.pytestPath": "/workspaces/buildstock-fetch/.venv/bin/pytest",
        "terminal.integrated.env.linux": {
          "PATH": "/workspaces/buildstock-fetch/.venv/bin:${env:PATH}"
        }
      }
    }
  }
}
