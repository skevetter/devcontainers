{
  "name": "Devcontainer",
  "build": {
    "dockerfile": "./Dockerfile",
    "context": "."
  },
  "postCreateCommand": {
    "pre-commit": "pre-commit install --install-hooks || echo 'pre-commit installation failed'",
    "ginkgo": "go install github.com/onsi/ginkgo/v2/ginkgo@latest",
    "goimports": "go install golang.org/x/tools/cmd/goimports@latest",
    "rust-permissions": "sudo chown -R vscode:vscode /usr/local/cargo/registry && sudo chmod -R u+w /usr/local/cargo/registry"
  },
  "features": {
    "ghcr.io/devcontainers-extra/features/act:1": {},
    "ghcr.io/devcontainers-extra/features/devcontainers-cli:1": {},
    "ghcr.io/devcontainers-extra/features/mise:1": {},
    "ghcr.io/devcontainers-extra/features/pre-commit:2": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": { "moby": false },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/go:1": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {},
    "ghcr.io/devcontainers/features/rust:1": {},
    "ghcr.io/skevetter/features/biome:1": {},
    "ghcr.io/skevetter/features/catppuccin:1": {},
    "ghcr.io/skevetter/features/fzf:1": {},
    "ghcr.io/skevetter/features/lazygit:1": {},
    "ghcr.io/skevetter/features/neovim:1": {},
    "ghcr.io/skevetter/features/pre-commit-cache:1": {},
    "ghcr.io/skevetter/features/protoc:1": {},
    "ghcr.io/skevetter/features/shell-history:1": {},
    "ghcr.io/skevetter/features/shfmt:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "EditorConfig.EditorConfig",
        "elijah-potter.harper",
        "esbenp.prettier-vscode",
        "GitHub.copilot-chat",
        "GitHub.copilot",
        "mhutchie.git-graph",
        "oderwat.indent-rainbow",
        "shardulm94.trailing-spaces"
      ]
    }
  }
}
